<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:gdit="http://schemas.android.com/apk/res/com.camera.activity"
	android:background="@color/darkblue"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TabHost 
	    android:id="@android:id/tabhost"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    <LinearLayout
	        android:orientation="vertical"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:padding="0dip">
	        <TabWidget
	            android:id="@android:id/tabs"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" />
	        <FrameLayout
	            android:id="@android:id/tabcontent"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:padding="0dip" >
	            
			    <!-- 中间布局 -->
				<ScrollView
					android:id="@+id/tab_1" 
					android:layout_marginTop="35dip"
					android:background="@color/gray"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent">
					
					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:orientation="vertical"
						android:gravity="center_horizontal"
						android:paddingTop="20dip">
						
						<RelativeLayout
							android:layout_height="42dip"
							android:layout_width="fill_parent"
							android:gravity="center_vertical">
							
							<TextView
								style="@style/conf_textview"
								android:id="@+id/text1"
								android:text="图片目录:"/>
							<com.camera.widget.CEditTextButton
								android:id="@+id/btnBrowse"
								style="@style/conf_edittext"
								android:layout_height="36dip"
								android:layout_toRightOf="@+id/text1"/>
								
						</RelativeLayout>
						
						<RelativeLayout
							android:id="@+id/layoutSubStation"
							android:layout_height="42dip"
							android:layout_width="fill_parent"
							android:gravity="center_vertical">
							
							<TextView
								style="@style/conf_textview"
								android:id="@+id/text4"
								android:text="分局名称:"/>
							<EditText
								android:id="@+id/etSubStation"
								style="@style/conf_edittext"
								android:layout_toRightOf="@+id/text4" />
								
						</RelativeLayout>
						
						<RelativeLayout
							android:id="@+id/layoutSurveyStation"
							android:layout_height="42dip"
							android:layout_width="fill_parent"
							android:gravity="center_vertical">
							
							<TextView
								style="@style/conf_textview"
								android:id="@+id/text5"
								android:text="测站名称:"/>
							<EditText
								android:id="@+id/etSurveyStation"
								style="@style/conf_edittext"
								android:layout_toRightOf="@+id/text5" />
								
						</RelativeLayout>
						
						<RelativeLayout
							android:id="@+id/layoutStationCode"
							android:layout_height="42dip"
							android:layout_width="fill_parent"
							android:gravity="center_vertical">
							
							<TextView
								style="@style/conf_textview"
								android:id="@+id/text6"
								android:text="测站编码:"/>
							<EditText
								android:id="@+id/etStationCode"
								style="@style/conf_edittext"
								android:layout_toRightOf="@+id/text6" />
								
						</RelativeLayout>
						
						<RelativeLayout
							android:id="@+id/layoutStationCode"
							android:layout_height="42dip"
							android:layout_width="fill_parent"
							android:gravity="center_vertical">
							
						    <Button
						    	android:id="@+id/btnSave"
						    	android:text="保存"
						    	android:textColor="@color/white"
						    	android:layout_width="60dip"
						    	android:layout_height="wrap_content"
						    	android:layout_alignParentRight="true"
						    	android:layout_marginRight="20dip"
						    	android:background="@drawable/button_bg"
						    	android:textSize="17sp"/>
								
						</RelativeLayout>
						
					</LinearLayout>
				</ScrollView>
			    
			    <!-- 中间布局 -->
				<ScrollView
					android:id="@+id/tab_2" 
					android:padding="20dip"
					android:background="@color/gray"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent">
					
					<TableLayout
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:stretchColumns="2">
						
						
						    <TableRow>
						        <TextView
						            android:layout_column="0"
						            android:text="服务器地址1:"
						            android:textColor="@color/black"
						            android:padding="3dip" />
						        <TextView
						            android:layout_column="1"
						            android:text="端口:"
						            android:textColor="@color/black"
						            android:padding="3dip" />
						    </TableRow>
						
						    <TableRow
						    		>
						        <EditText
						            android:layout_column="0"
						        	android:gravity="left"
						        	android:layout_width="190dip"
						        	android:layout_height="wrap_content"
						        	android:singleLine="true"
						        	android:hint="eg:192.168.1.1"/>
						        <EditText
						        	android:layout_marginTop="3dip"
						            android:layout_column="1"
						        	android:layout_width="90dip"
						        	android:layout_height="wrap_content"
						        	android:singleLine="true"
						        	android:hint="eg:8080"/>
						        	
						    </TableRow>
						
						    <View
						        android:layout_height="2dip"
						        android:background="#FF909090" />
						        
						    <TableRow
						    		android:gravity="right">
							    <Button
						            android:layout_column="1"
							    	android:id="@+id/btnTest2"
							    	android:text="测试"
							    	android:textColor="@color/white"
							    	android:layout_width="50dip"
							    	android:layout_height="wrap_content"
							    	android:background="@drawable/button_bg"
							    	android:textSize="17sp"/>
						        
						    </TableRow>
						
						    <TableRow>
						        <TextView
						            android:layout_column="0"
						            android:text="服务器地址2:"
						            android:textColor="@color/black"
						            android:padding="3dip" />
						        <TextView
						            android:layout_column="1"
						            android:text="端口:"
						            android:textColor="@color/black"
						            android:padding="3dip" />
						    </TableRow>
						
						    <TableRow
						    		>
						        <EditText
						            android:layout_column="0"
						        	android:gravity="left"
						        	android:layout_width="190dip"
						        	android:layout_height="wrap_content"
						        	android:singleLine="true"
						        	android:hint="eg:192.168.1.1"/>
						        <EditText
						        	android:layout_marginTop="3dip"
						            android:layout_column="1"
						        	android:layout_width="90dip"
						        	android:layout_height="wrap_content"
						        	android:singleLine="true"
						        	android:hint="eg:8080"/>
						        	
						    </TableRow>
						
						    <View
						        android:layout_height="2dip"
						        android:background="#FF909090" />
						
						    <TableRow
						    		android:gravity="right">
							    <Button
						            android:layout_column="1"
							    	android:id="@+id/btnTest2"
							    	android:text="测试"
							    	android:textColor="@color/white"
							    	android:layout_width="50dip"
							    	android:layout_height="wrap_content"
							    	android:background="@drawable/button_bg"
							    	android:textSize="17sp"/>
						        
						    </TableRow>
					</TableLayout>
						
				</ScrollView>
	            
	        </FrameLayout>
	    </LinearLayout>
	</TabHost>
	
	<!-- 底部工具栏 -->
	<com.camera.widget.CTitleBar
		android:id="@+id/bottomBar"
	    android:layout_width="fill_parent"
	    android:layout_alignParentBottom="true"
	    android:layout_height="40dip"
	    android:background="@drawable/blue_toolbar_bg"    
	    gdit:left_view="@+id/btnExit"
	    gdit:right_view="@+id/btnUpdateManager"
	    gdit:title_view="@+id/btnTestService" >
	    
	    <Button
	    	android:id="@+id/btnExit"
	    	android:text="退出"
	    	android:background="@drawable/controlbar_button_bg"
	    	android:textSize="17sp"
	    	android:textColor="@color/toolbar_btn_color"/>
	    <Button
	    	android:id="@+id/btnUpdateManager"
	    	android:text="上传管理"
	    	android:background="@drawable/controlbar_button_bg"
	    	android:textSize="17sp"
	    	android:textColor="@color/toolbar_btn_color"/>
	    	<!-- 
	    <Button
	    	android:id="@+id/btnTestService"
	    	android:text="测试服务器"
	    	android:background="@drawable/controlbar_button_bg"
	    	android:textSize="17sp"
	    	android:textColor="@color/toolbar_btn_color"/>
 -->
			
	</com.camera.widget.CTitleBar>
</RelativeLayout>