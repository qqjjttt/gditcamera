<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:gdit="http://schemas.android.com/apk/res/com.camera.activity"
	android:background="@color/darkblue"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<!-- 标题栏 -->
	<com.camera.widget.CTitleBar
		android:id="@+id/titleBar"
	    android:layout_width="fill_parent"
	    android:layout_alignParentTop="true"
	    android:layout_height="35dip"
	    android:background="@drawable/title_bg"    
	    gdit:left_view="@+id/btnLeft"
	    gdit:right_view="@+id/btnRight"
	    gdit:title_view="@+id/txtTitle" >
  
	    <TextView
	    	android:id="@+id/txtTitle"
	    	android:text="软件配置"
	    	android:textSize="17sp"
	    	android:textColor="@color/white"/>
			
	</com.camera.widget.CTitleBar>
	
	<View
		android:layout_alignBottom="@+id/titleBar"
		android:id="@+id/shadow"
		android:layout_height="20dip"
		android:layout_width="fill_parent"
		android:background="@drawable/shadow" />
	
	<!-- 中间布局 -->
	<ScrollView
		android:layout_marginTop="35dip"
		android:layout_marginBottom="40dip"
		android:background="@color/gray"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:gravity="center_horizontal"
			android:paddingTop="20dip">
			
			<RelativeLayout
				android:layout_height="42dip"
				android:layout_width="fill_parent"
				android:gravity="center_vertical">
				
				<TextView
					style="@style/conf_textview"
					android:id="@+id/text1"
					android:text="图片目录:"/>
				<EditText
					style="@style/conf_edittext"
					android:layout_toRightOf="@+id/text1"/>
					
			</RelativeLayout>
			
			<RelativeLayout
				android:layout_height="42dip"
				android:layout_width="fill_parent"
				android:gravity="center_vertical">
				
				<TextView
					style="@style/conf_textview"
					android:id="@+id/text2"
					android:text="地址:"/>
				<EditText
					style="@style/conf_edittext"
					android:layout_toRightOf="@+id/text2"/>
					
			</RelativeLayout>
			
			<RelativeLayout
				android:layout_height="42dip"
				android:layout_width="fill_parent"
				android:gravity="center_vertical">
				
				<TextView
					style="@style/conf_textview"
					android:id="@+id/text3"
					android:text="端口:"/>
				<EditText
					style="@style/conf_edittext"
					android:layout_toRightOf="@+id/text3" />
					
			</RelativeLayout>
			
			<RelativeLayout
				android:layout_height="42dip"
				android:layout_width="fill_parent"
				android:gravity="center_vertical">
				
				<TextView
					style="@style/conf_textview"
					android:id="@+id/text4"
					android:text="分局名称:"/>
				<EditText
					style="@style/conf_edittext"
					android:layout_toRightOf="@+id/text4" />
					
			</RelativeLayout>
			
			<RelativeLayout
				android:layout_height="42dip"
				android:layout_width="fill_parent"
				android:gravity="center_vertical">
				
				<TextView
					style="@style/conf_textview"
					android:id="@+id/text5"
					android:text="测站名称:"/>
				<EditText
					style="@style/conf_edittext"
					android:layout_toRightOf="@+id/text5" />
					
			</RelativeLayout>
			
			<RelativeLayout
				android:layout_height="42dip"
				android:layout_width="fill_parent"
				android:gravity="center_vertical">
				
				<TextView
					style="@style/conf_textview"
					android:id="@+id/text6"
					android:text="测站编码:"/>
				<EditText
					style="@style/conf_edittext"
					android:layout_toRightOf="@+id/text6" />
					
			</RelativeLayout>
			
		</LinearLayout>
	</ScrollView>
	
	<!-- 底部工具栏 -->
	<com.camera.widget.CTitleBar
		android:id="@+id/bottomBar"
	    android:layout_width="fill_parent"
	    android:layout_alignParentBottom="true"
	    android:layout_height="40dip"
	    android:background="@drawable/blue_toolbar_bg"    
	    gdit:left_view="@+id/btnLeft"
	    gdit:right_view="@+id/btnRight"
	    gdit:title_view="@+id/txtTitle" >
	    
	    <Button
	    	android:id="@+id/btnLeft"
	    	android:text="退出"
	    	android:background="@drawable/controlbar_button_bg"
	    	android:textSize="17sp"
	    	android:textColor="@color/toolbar_btn_color"/>
	    <Button
	    	android:id="@+id/btnRight"
	    	android:text="上传管理"
	    	android:background="@drawable/controlbar_button_bg"
	    	android:textSize="17sp"
	    	android:textColor="@color/toolbar_btn_color"/>
	    	
	    <Button
	    	android:id="@+id/txtTitle"
	    	android:text="测试服务器"
	    	android:background="@drawable/controlbar_button_bg"
	    	android:textSize="17sp"
	    	android:textColor="@color/toolbar_btn_color"/>

			
	</com.camera.widget.CTitleBar>
</RelativeLayout>
